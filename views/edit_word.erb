<h1>Update <%= @word.str() %></h1>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="str">Edit word</label>
  <input id="str" name="str" type="text">

  <button type="submit">Update</button>


<p><a href="/words">Return to word list</a><p>

<form action="/words/<% @word.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  
  <button type="submit">Delete word</button>
</form>